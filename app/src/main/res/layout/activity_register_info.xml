<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/mrl"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:background="#000000">

        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="200dp"
            android:layout_height="42dp">

            <ImageButton
                android:id="@+id/ivTitleBtnLeft"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/back_white"
                android:gravity="left" />

            <TextView
                android:id="@+id/ivTitleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivTitleBtnLeft"
                android:singleLine="true"
                android:text="注册-个人信息"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="保存"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mrl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@mipmap/take_photo" />

    <RelativeLayout
        android:id="@+id/ll_name"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/take_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:src="@mipmap/regis_user" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_logo"
            android:gravity="center"
            android:text="姓名"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@mipmap/p3_input" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@null"
            android:ems="10"
            android:selectAllOnFocus="true"
            android:textColorHint="#34C6F0"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_sex"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:src="@mipmap/regis_sex" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_sex"
            android:gravity="center"
            android:text="性别"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_sex"
            android:background="@mipmap/p3_input" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_sex">

            <ImageView
                android:id="@+id/sex_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/boy_pree" />

            <ImageView
                android:id="@+id/sex_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sex_boy"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:src="@mipmap/girl" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_birthday"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_sex"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_birthday"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:src="@mipmap/regis_birthday" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_birthday"
            android:gravity="center"
            android:text="年龄"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_birthday"
            android:background="@mipmap/p3_input" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_birthday"
            android:background="@null"
            android:inputType="number"
            android:maxLength="3"
            android:selectAllOnFocus="true"
            android:textColorHint="#34C6F0"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_email"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_birthday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:src="@mipmap/regis_email" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_email"
            android:gravity="center"
            android:text="邮箱"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_email"
            android:background="@mipmap/p3_input" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_email"
            android:background="@null"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:textColorHint="#34C6F0"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_tel"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_tel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:src="@mipmap/tel" />

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_tel"
            android:gravity="center"
            android:text="电话"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_tel"
            android:background="@mipmap/p3_input" />

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_tel"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:selectAllOnFocus="true"
            android:textColorHint="#34C6F0"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_height"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_tel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_height"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:src="@mipmap/height" />

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_height"
            android:gravity="center"
            android:text="身高(cm)"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_height"
            android:background="@mipmap/p3_input" />

        <EditText
            android:id="@+id/et_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_height"
            android:background="@null"
            android:inputType="number"
            android:maxLength="3"
            android:selectAllOnFocus="true"
            android:textColorHint="#34C6F0"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_weight"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_weight"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:src="@mipmap/weight" />

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_weight"
            android:gravity="center"
            android:text="体重(kg)"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_weight"
            android:background="@mipmap/p3_input" />

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_weight"
            android:background="@null"
            android:inputType="number"
            android:maxLength="3"
            android:selectAllOnFocus="true"
            android:textColorHint="#34C6F0"></EditText>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_weight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#34C6F0"
        android:text="返回上一页"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />


</RelativeLayout>