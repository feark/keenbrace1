<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:kb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2">

<include android:id="@+id/toolbar" layout="@layout/toolbar"></include>

    <com.keenbrace.widget.SwipeListView
        android:id="@+id/lv_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        kb:slv_right_view_width="80dp"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:divider="@null"
        android:drawSelectorOnTop="false"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="@dimen/space_8"
        android:layout_marginLeft="@dimen/space_7"
        android:layout_marginRight="@dimen/space_7"
        android:layout_marginBottom="@dimen/space_7"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="5dp">
    </com.keenbrace.widget.SwipeListView>


</RelativeLayout>