<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ececec"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#34C6F0">

        <ImageButton
            android:id="@+id/ivTitleBtnLeft"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back_white"
            android:gravity="center"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/ivTitleName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="left"
            android:paddingLeft="20.0dip"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@mipmap/top"
        android:gravity="center"
        android:layout_above="@+id/btn_visitor"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="86dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@mipmap/name_logo" />

        <EditText
            android:id="@+id/et_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="username"
            android:selectAllOnFocus="true"
            android:textColor="@color/selector_text"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@mipmap/below"
        android:gravity="center"
        android:layout_above="@+id/ll_name"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@mipmap/key_icon" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textColor="@color/selector_text"></EditText>
    </LinearLayout>


    <TextView
        android:id="@+id/btn_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="14dp"
        android:background="@null"
        android:text="forget password?"
        android:textColor="#434343"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_forget"
        android:layout_alignBottom="@+id/btn_forget"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:background="@null"
        android:text="sign up"
        android:textColor="#434343"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btn_login"
        android:src="@mipmap/login"
        android:layout_below="@+id/rl_left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btn_visitor"
        android:src="@mipmap/visitor"
        android:layout_below="@+id/btn_login"
        android:layout_alignStart="@+id/btn_login"
        android:layout_marginTop="35dp" />

</RelativeLayout>