<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:kb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <include
        android:id="@+id/toolbar"

        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/ly_tab"
        android:layout_below="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:background="@color/bgparent">

        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="31.0dip"
            android:layout_height="47.0dip"
            android:layout_alignParentTop="true"
            android:layout_marginRight="29dp"
            android:layout_toLeftOf="@+id/iv_report"
            android:src="@mipmap/menu_map" />

        <ImageView
            android:id="@+id/iv_report"
            android:layout_width="31.0dip"
            android:layout_height="47.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="119dp"
            android:src="@mipmap/menu_report" />

    </RelativeLayout>

    <com.amap.api.maps2d.MapView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/ly_tab">

    </com.amap.api.maps2d.MapView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/map">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_line"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="time"
                    android:textColor="#6DCAEC" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="distance"
                    android:textColor="#6DCAEC" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="calories"
                    android:textColor="#6DCAEC" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="alarm"
                    android:textColor="#6DCAEC" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_title"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tx_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="#3f4247" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tx_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="#3f4247" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tx_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="#3f4247" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tx_warings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="#3f4247" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tx_line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/ll_v"
            android:background="#D1D2D4" />

        <ListView
            android:id="@+id/lv_datas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:divider="#D1D2D4"
            android:dividerHeight="1px"
            android:layout_below="@+id/tx_line2"
            android:background="@null"></ListView>

        <com.keenbrace.widget.SwipeListView
            android:id="@+id/lv_data"
            style="@style/match_weight"
            kb:slv_right_view_width="80dp"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:divider="@null"
            android:drawSelectorOnTop="false"
            android:listSelector="@android:color/transparent"
            android:layout_margin="@dimen/space_7"
            android:dividerHeight="@dimen/space_8"
            >
        </com.keenbrace.widget.SwipeListView>
    </RelativeLayout>

</RelativeLayout>