<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keenbrace.fragment.TT2Fragment"
    android:background="@mipmap/tutorialbk3">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="FITNESS ASSESSMENT"
            android:id="@+id/textView4"
            android:layout_marginTop="27dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3 / 4"
            android:id="@+id/textView17"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView17"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.25"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="How active are you currently?"
                    android:id="@+id/textView35"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:gravity="center" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="23dp">

                    <TextView
                        android:text="WHAT  MAKES  IT  HARD  FOR  YOU  TO  BE  MORE  ACTIVE?"
                        android:layout_width="215dp"
                        android:layout_height="85dp"
                        android:id="@+id/textView39"
                        android:textColor="@color/alpha_95_white"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_below="@+id/imageView13"
                        android:layout_centerHorizontal="true"
                        android:textStyle="normal|bold" />

                    <View
                        android:layout_height="4px"
                        android:layout_width="500px"
                        android:background="@color/bright_foreground_material_dark"

                        android:layout_alignParentTop="true" />

                    <TextView
                        android:text="Pick  up  to  two."
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:id="@+id/textView42"
                        android:textStyle="normal|bold"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="@color/background_floating_material_light" />



                    <CheckBox
                        android:text="    Limited  Time"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:id="@+id/radioButton4"
                        android:textSize="16sp"
                        android:textColor="@color/alpha_95_white"
                        android:button="@drawable/check_btn" />

                    <CheckBox
                        android:text="    No  Energy"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:id="@+id/radioButton3"
                        android:textSize="16sp"
                        android:button="@drawable/check_btn"
                        android:textColor="@color/alpha_95_white" />

                    <CheckBox
                        android:text="    Motivation"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:id="@+id/radioButton2"
                        android:textSize="16sp"
                        android:button="@drawable/check_btn"
                        android:textColor="@color/alpha_95_white" />

                    <CheckBox
                        android:id="@+id/radioBtn4"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:text="    Need  Guidance"
                        android:textColor="@color/background_floating_material_light"
                        android:textSize="16sp"
                        android:button="@drawable/check_btn" />

                    <CheckBox
                            android:id="@+id/radioBtn5"
                            android:layout_width="180dp"
                            android:layout_height="35dp"
                            android:text="    Nothing"
                            android:textSize="16sp"
                            android:button="@drawable/check_btn"
                            android:textColor="@color/alpha_95_white" />


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView9"
                        android:src="@mipmap/unch_page"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView10"
                        android:src="@mipmap/unch_page"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView8"
                        android:src="@mipmap/chosen_page"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView11"
                        android:src="@mipmap/unch_page"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
