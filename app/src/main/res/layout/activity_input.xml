<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_match"
    android:background="@color/bg_color_grep"
    >
    <include android:id="@+id/toolbar" layout="@layout/toolbar"></include>

    <LinearLayout
        style="@style/match_wrap"
        android:layout_below="@+id/top_menu"
        android:paddingLeft="@dimen/space_25"
        android:paddingRight="@dimen/space_25"
        android:paddingTop="@dimen/space_10"
        android:paddingBottom="@dimen/space_10"
        android:layout_marginTop="@dimen/space_60"
        android:layout_marginBottom="@dimen/space_10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/ll_login_input_corners_bg" >

        <EditText
            android:id="@+id/et_input"
            style="@style/weight_wrap"
            android:background="@null"
            android:textColor="@color/gray_a1"
            android:textSize="@dimen/text_size_15"
            android:hint="@string/hit_name"
            android:textColorHint="@color/gray_a1"
            android:lines="1"
            android:textCursorDrawable="@drawable/cursor_comon"
            />
        <ImageView
            android:id="@+id/iv_clean"
            style="@style/wrap_wrap"
            android:contentDescription="@null"

            android:background="@mipmap/icon_input_del" />
    </LinearLayout>
</RelativeLayout>
