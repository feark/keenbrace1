<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@mipmap/performance_box"
        android:orientation="vertical"
        android:id="@+id/rundatabox">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:id="@+id/rl_cadence"
                android:visibility="gone"
                android:layout_weight="0.04">

                <TextView
                    android:id="@+id/tv_steprate_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Step Rate"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_steprate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_steprate_s"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0/min"
                    android:textColor="#FFDD15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="SPORTS TITLE"
                    android:id="@+id/sports_title"
                    android:visibility="gone"
                    android:layout_alignTop="@+id/tv_steprate_s"
                    android:layout_alignStart="@+id/tv_steprate_s" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rl_stride"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_stride_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Stride"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_stride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_stride_s"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#FFDD15" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rl_step"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_step_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Step"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_step_s"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#FFDD15" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.04"
                android:id="@+id/rl_sporttitle"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/sporttitle"
                    android:layout_marginStart="27dp"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/reps_number"
                    android:layout_marginStart="10dp"
                    android:layout_alignBottom="@+id/sporttitle"
                    android:layout_toEndOf="@+id/sporttitle"
                    android:textColor="#FFDD15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="reps"
                    android:id="@+id/reps_unit"
                    android:layout_marginStart="18dp"
                    android:layout_alignBottom="@+id/reps_number"
                    android:layout_toEndOf="@+id/reps_number"
                    android:textColor="#FFFFFF" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/reps_unit">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target"
                        android:id="@+id/target_title"
                        android:textColor="#FFFFFF"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Biceps"
                        android:id="@+id/train_target"
                        android:textColor="#FFDD12"
                        android:textAlignment="center"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/target_title"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rl_speed">

                <TextView
                    android:id="@+id/tv_speed_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Speed"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_speed_t"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#FFDD15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_distance_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Distance"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_distance_t"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0:00"
                    android:textColor="#FFDD15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_calories_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Calories"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_calories_t"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#FFDD15" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <com.keenbrace.widget.CircularProgressBar
                android:id="@+id/pd_circle_yellow"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_centerInParent="true"
                android:progress="0"
                android:visibility="gone" />

            <com.keenbrace.widget.CircularProgressBar
                android:id="@+id/pd_circle_red"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_centerInParent="true"
                android:progress="0"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="195dp"
                android:layout_height="195dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_bg"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/rltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp">

                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/time" />

                <TextView
                    android:id="@+id/tv_sumtimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_time"
                    android:text="00:00 mins"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rltime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Risk factors"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_factors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_foot"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textColor="#FFDD15"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_sumd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_factors"
                android:layout_centerHorizontal="true"
                android:text="times"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true">

                <com.keenbrace.widget.GifView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/gif_animation"
                    android:visibility="visible"
                    android:layout_marginTop="35dp" />

                <com.keenbrace.widget.CircularProgressBar
                    android:id="@+id/pd_circle_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_alignParentLeft="true"
                    android:progress="0"
                    android:visibility="gone"
                    android:layout_marginTop="20dp" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/indicate_box"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/indicate_box"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="25dp" />

                <TextView
                    android:id="@+id/indicate_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:text="Go"
                    android:layout_marginBottom="62dp"
                    android:layout_alignBottom="@+id/indicate_box"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_alignTop="@+id/pd_circle_blue"
                    android:id="@+id/rl_countdown"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0:00"
                        android:id="@+id/restTime"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="98dp"
                        android:textColor="#FFDD15"
                        android:textSize="65dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Rest"
                        android:id="@+id/tx_count_title"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:textColor="#94cf7e" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>