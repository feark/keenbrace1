<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp">

            <com.keenbrace.widget.CircularProgressBar
                android:id="@+id/pd_circle_yellow"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_centerInParent="true"
                android:progress="0" />

            <com.keenbrace.widget.CircularProgressBar
                android:id="@+id/pd_circle_red"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_centerInParent="true"
                android:progress="0" />

            <com.keenbrace.widget.CircularProgressBar
                android:id="@+id/pd_circle_blue"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentLeft="true"
                android:progress="0" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="195dp"
                android:layout_height="195dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_bg" />

            <RelativeLayout
                android:id="@+id/rltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp">

                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/time" />

                <TextView
                    android:id="@+id/tv_sumtimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_time"
                    android:text="00:00 mins"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rltime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Risk factors"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_factors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_foot"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textColor="#FFDD15"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_sumd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_factors"
                android:layout_centerHorizontal="true"
                android:text="times"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center_vertical"
                    android:background="#FF8030" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="fast"
                    android:textColor="#FF8030" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="62dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center_vertical"
                    android:background="#FCF800" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="mid"
                    android:textColor="#FCF800" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center_vertical"
                    android:background="#6DCAEC" />

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:text="slow"
                    android:textColor="#6DCAEC" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@mipmap/performance_box"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_steprate_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Step Rate"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_steprate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_steprate_s"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0/min"
                    android:textColor="#FFDD15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_stride_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Stride"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_stride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_stride_s"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#FFDD15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_step_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Step"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_step_s"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#FFDD15" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_speed_S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Speed"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_speed_S"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#FFDD15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_distance_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Distance"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_distance_s"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0:00"
                    android:textColor="#FFDD15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_Calories_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Calories"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_Calories_s"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#FFDD15" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>